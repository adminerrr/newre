//当前库存查询
procedure TForm1.Button_resore_seacherClick(Sender: TObject);
var te:string;
    ty:integer;
begin
   form1.Button_config.Caption:='the modefyied';
   form1.GroupBox1.Ctl3D:=true;
   form1.GroupBox1.GetTextBuf(te,ty);
   form1.Label1_title.Color:=clblack;
   //菜单项的实现,对于基本组件使用,
   form1.Menu.Merge(MainMenu1);
end;

//检验
procedure TForm1.Button_modefideClick(Sender: TObject);
begin
  form1.Button_config.Font.Size:=12;
  form1.Button_config.Font.Color:=clgreen;
  form1.Button_config.font.Style:=fsbold;
  form1.Button_config.Font.Free;
end;

