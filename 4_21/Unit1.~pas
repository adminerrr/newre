    GroupBox1: TGroupBox;
    Button_config: TButton;
    Button_log: TButton;
    Button_fx: TButton;
    Button_save: TButton;
    Button_sale: TButton;
    Button_input: TButton;
    GroupBox2: TGroupBox;
    Image1: TImage;
    Label1_title: TLabel;
    Button_buy: TButton;
    Button_inresore: TButton;
    Button_modefide: TButton;
    Button_paper_seacher: TButton;
