var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.FormCreate(Sender: TObject);
begin
    form1.Show;
end;

//进货管理
procedure TForm1.Button_inputClick(Sender: TObject);
begin
  form1.Show;
  form1.Button_buy.Font.Color:=clgreen;
  form1.Button_inresore.Font.Color:=clgreen;
  form1.Button_back.Font.Color:=clgreen;
  form1.Button_paper_seacher.Font.Color:=clgreen;
  form1.Button_modefied.Font.Color:=clgreen;
  form1.Button_resore_seacher.Font.Color:=clgreen;
end;

//销售管理
procedure TForm1.Button_saleClick(Sender: TObject);
begin
   form1.Button_buy.Caption:='销售订单';
   form1.Button_inresore.Caption:='入仓';
   form1.Button_paper_seacher.Caption:='销售查询';
   form1.Button_modefide.Caption:='退换货查询';
   form1.Button_back.Caption:='往来账务查询';
   form1.Button_resore_seacher.Caption:='当前库存查询';
end;

//库存管理
